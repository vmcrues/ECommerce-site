<h1>Let's Buy Some Goodies!</h1>

<h4> Your Order:</h4>

<table class= "table">
  <thead>
      <tr>
        <th> Product </th>
        <th> Quantity </th>
        <th> Unit Price </th>
        <th> Total Price </th>
      </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |key, value| %>
    <tr>
      <td><%= Product.find(key).name %></td>
      <td><%= value %></td>
      <td><%= number_to_currency Product.find(key).price %></td>
      <td><%= number_to_currency Product.find(key).price * value %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<p> <strong> Sub Total: </strong> <%= number_to_currency @order.subtotal%><br></p>
<p> <strong> Tax Total: </strong> <%= number_to_currency @order.sales_tax%><br></p>
<p><strong> Order Total: </strong> <%= number_to_currency @order.grand_total%><br></p>

<div style="display:inline-block">
  <%= link_to "Empty my cart", cancel_checkout_path(order_id: @order.id), method: :post, class:"btn btn-danger", data: {confirm: "Are you sure you want to empty your cart?"} %>
</div>

<div style = 'display:inline-block;'>
  <%= form_tag order_complete_path do %>
  <div>
    <%= hidden_field_tag :order_id, @order.id %>
  </div>
<script src ="https://checkout.stripe.com/checkout.js"
class="stripe-button"
data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
data-description="Order #<%= @order.id %>"
data-amount = "<%= (@order.grand_total.to_f.round(2)* 100)%>"></script>
<% end %>
</div>
